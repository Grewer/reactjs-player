{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": [
        "master",
        "lerna"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "access": "public"
    }
  }
}
